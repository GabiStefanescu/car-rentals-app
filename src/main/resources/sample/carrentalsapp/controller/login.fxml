<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" style="-fx-background-color: #2D3447;" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.carrentalsapp.controller.LoginController">
   <children>
      <ImageView fitHeight="134.0" fitWidth="162.0" layoutX="133.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../image/car-rental.jpg" />
         </image>
      </ImageView>
      <TextField fx:id="usernameField" layoutX="124.0" layoutY="155.0" promptText="  Username">
         <font>
            <Font size="14.0" />
         </font>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <effect>
            <Blend opacity="0.6" />
         </effect>
      </TextField>
      <PasswordField fx:id="passwordField" layoutX="124.0" layoutY="200.0" promptText="  Password">
         <font>
            <Font size="14.0" />
         </font>
      </PasswordField>
      <ImageView fitHeight="30.0" fitWidth="28.0" layoutX="79.0" layoutY="156.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../image/username.png" />
         </image>
      </ImageView>
      <ImageView fitHeight="30.0" fitWidth="28.0" layoutX="79.0" layoutY="201.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../image/password.png" />
         </image>
      </ImageView>
      <Button fx:id="loginButton" layoutX="127.0" layoutY="264.0" mnemonicParsing="false" onAction="#setAdminScene" style="-fx-background-color: #67647e;" text="Login" textFill="WHITE">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button fx:id="customerButton" layoutX="218.0" layoutY="264.0" mnemonicParsing="false" onAction="#setCustomerScene" style="-fx-background-color: #67647e;" text="Customer" textFill="WHITE">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
